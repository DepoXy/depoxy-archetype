[DEFAULT]
__USYNC__ =
  meld \
    DXY_DEPOXYARCHETYPE_DIR_TILDE/.mrconfigs/_mrconfig.EVAL.omr \
    DXY_DEPOXYDIR_RUNNING_TILDE/.mrconfigs/_mrconfig &

# ========================================================================
